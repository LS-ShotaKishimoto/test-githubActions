{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useHookAtTopLevel":"error"
			},
			"suspicious": {
				"noConsoleLog": "warn"
			}
		}
	},
	"formatter": {
		"indentStyle": "space"
	},
	"javascript": {
		"formatter": {
			"quoteStyle":"single"
		}
	}
}
